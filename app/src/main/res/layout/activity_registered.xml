<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/ic_bg"
    android:layout_height="match_parent"
    tools:context=".ui.RegisteredActivity">
    <ImageView
        android:onClick="onClick"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_ib_back"
        android:id="@+id/setting_back_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="OnClick" />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/registered_pwd_tv"
        android:textSize="30sp"
        android:text="密码注册"
        android:layout_below="@+id/setting_back_ib"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="12dp"
        android:id="@+id/setting_registered_rl"
        android:layout_below="@+id/registered_pwd_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll"
            android:layout_marginLeft="80dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/setting_registered_door_number_tv"
                android:textSize="25sp"
                android:text="选择门号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:layout_gravity="center"
                android:id="@+id/setting_registered_list_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <TextView
            android:gravity="center"
            android:layout_alignBottom="@+id/setting_registered_pwd_et"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/setting_registered_status_tv"
            android:layout_below="@+id/ll"
            android:textSize="25sp"
            android:text="密码注册:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginTop="40dp"
            android:layout_below="@+id/ll"
            android:hint="请输入6位密码"
            android:textSize="22sp"
            android:id="@+id/setting_registered_pwd_et"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="2dp"

            android:layout_toRightOf="@+id/setting_registered_status_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </RelativeLayout>

    <include
        layout="@layout/main_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp" />
</RelativeLayout>