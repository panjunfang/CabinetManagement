<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_bg"
    tools:context=".ui.SettingActivity">

    <ImageView
        android:onClick="onClick"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_ib_back"
        android:id="@+id/setting_back_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/setting_back_ib"
        android:textColor="#fff"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/setting_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开锁串口设置"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="26dp" />

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/setting_tv"
        android:id="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:textSize="25sp"
            android:id="@+id/stting_serial_port_tv"

            android:text="串口:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_marginLeft="5dp"
            android:id="@+id/stting_serial_port_spinner"
            android:layout_toRightOf="@+id/stting_serial_port_tv"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rl1"
        android:id="@+id/rl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/setting_baud_rate_tv"
            android:textSize="25sp"
            android:text="波特率"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_centerVertical="true"
            android:gravity="bottom"
            android:id="@+id/setting_baud_rate_sp"
            android:layout_marginTop="10dp"
            android:layout_alignBottom="@+id/setting_baud_rate_tv"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/setting_baud_rate_tv"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <TextView
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:layout_below="@+id/rl2"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/setting_ic_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IC串口设置"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="26dp" />

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/setting_ic_tv"
        android:id="@+id/rl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView

            android:textSize="25sp"
            android:id="@+id/stting_serial_port_ic_tv"
            android:layout_centerVertical="true"
            android:text="串口:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_centerVertical="true"
            android:id="@+id/stting_serial_port_ic_spinner"
            android:layout_toRightOf="@+id/stting_serial_port_ic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rl3"
        android:id="@+id/rl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/setting_baud_rate_ic_tv"
            android:textSize="25sp"
            android:text="波特率"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_centerVertical="true"
            android:id="@+id/setting_baud_rate_ic_sp"
            android:layout_toRightOf="@+id/setting_baud_rate_ic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <!--todo-->

    <TextView
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:layout_below="@+id/rl4"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/setting_x86_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PC串口设置"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="26dp" />

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/setting_x86_tv"
        android:id="@+id/rl5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="25sp"
            android:id="@+id/stting_serial_port_x86_tv"
            android:layout_centerVertical="true"
            android:text="串口:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner

            android:layout_centerVertical="true"
            android:id="@+id/stting_serial_port_x86_spinner"
            android:layout_toRightOf="@+id/stting_serial_port_x86_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl6"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rl5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/setting_baud_rate_x86_tv"
            android:textSize="25sp"
            android:text="波特率"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/setting_baud_rate_x86_sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/setting_baud_rate_x86_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



    <!--todo-->



    <Button
        android:background="@drawable/in_button_selector"
        android:text="更新串口信息"
        android:textSize="22sp"
        android:id="@+id/setting_up_but"
        android:onClick="onClick"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rl6"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <RelativeLayout
        android:visibility="gone"
        android:layout_marginTop="12dp"
        android:id="@+id/setting_registered_rl"
        android:layout_below="@+id/setting_up_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:id="@+id/setting_registered_tv"
            android:textSize="25sp"
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/setting_registered_tv"
            android:textSize="20sp"
            android:id="@+id/setting_registered_way_tv"
            android:text="选择注册方式"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:layout_below="@+id/setting_registered_tv"
            android:layout_toRightOf="@+id/setting_registered_way_tv"
            android:id="@+id/setting_registered_rg"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:checked="true"
                android:textSize="18sp"
                android:id="@+id/setting_pwd_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码注册" />

            <RadioButton
                android:textSize="18sp"
                android:id="@+id/setting_ic_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IC卡注册" />
        </RadioGroup>

        <TextView

            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/setting_registered_list_sp"
            android:id="@+id/setting_registered_door_number_tv"
            android:textSize="22sp"
            android:text="选择门号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner

            android:layout_marginTop="10dp"
            android:id="@+id/setting_registered_list_sp"
            android:layout_below="@+id/setting_registered_way_tv"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@+id/setting_registered_door_number_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/setting_registered_status_tv"
            android:layout_alignBottom="@+id/setting_registered_pwd_et"
            android:layout_marginLeft="10dp"
            android:textSize="22sp"
            android:text="密码注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:hint="请输入"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:id="@+id/setting_registered_pwd_et"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/setting_registered_door_number_tv"
            android:layout_toRightOf="@+id/setting_registered_door_number_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="注册"
            android:textSize="22sp"
            android:id="@+id/setting_registered_but"
            android:onClick="onClick"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/setting_registered_pwd_et"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>


    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/setting_door_number_tv"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textColor="#fff"
        android:textSize="30sp"
        android:layout_below="@+id/setting_registered_rl"
        android:text="选择门卡号"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:textSize="25sp"
        android:id="@+id/setting_left_cabinet_tv"
        android:layout_below="@+id/setting_door_number_tv"
        android:text="左柜1-8号箱"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/setting_left_cabinet_tv"
        android:id="@+id/setting_registered1_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >


        <RadioButton
            android:checked="true"
            android:textSize="25sp"
            android:id="@+id/setting_door_panel1_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1号板" />

        <RadioButton
            android:textSize="25sp"
            android:id="@+id/setting_door_panel2_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2号板" />
    </RadioGroup>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:textSize="25sp"
        android:id="@+id/setting_right_cabinet_tv"
        android:layout_below="@+id/setting_registered1_rg"
        android:text="右柜9-16号箱"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/setting_right_cabinet_tv"
        android:id="@+id/setting_registered2_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton

            android:textSize="25sp"
            android:id="@+id/setting_door_panel2_1_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1号板" />

        <RadioButton
            android:checked="true"
            android:textSize="25sp"
            android:id="@+id/setting_door_panel2_2_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2号板" />
    </RadioGroup>

    <Button
        android:visibility="gone"
        android:textSize="22sp"
        android:id="@+id/setting_back_but"
        android:onClick="onClick"
        android:text="返回"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/setting_registered2_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="OnClick" />

x
</RelativeLayout>